   <html>
    <head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    <style>
        *, ::after, ::before {
            margin: 0;
            padding: 0;
            -webkit-box-sizing: border-box;
            box-sizing: border-box;
        }
        body, div {
        font-family: 'Roboto', sans-serif;
        font-size: 18px;
        color:#000;
        background:#fff;
        }
        .container{
            width: 480px;
            padding: 5px 5px 20px;
        }
        table {
            width: 100%;
            border-spacing: 0;
            border-collapse: collapse;
            empty-cells: show;
            font-weight: 400;
        }
        th {
            text-align: center;
            border-bottom: 1px solid #70757b;
            color: #70757b;
            padding: 5px 10px;
            vertical-align: middle;
            font-weight: 400;
        }
        td {
            vertical-align: middle;
            text-align: center;
            padding: 7px 10px 3px;
            color: #4d5154;
            font-weight: 400;
        }
        td:not([class]), th:not([class]) {
            padding: 0;
        }
        .team{
            text-align: left;
        }
        .t-left{
            text-align: left;
        }
        .pl-0{
            padding-left: 0;
        }
        .pl-10{
            padding-left: 10px;
        }
        .p-0{
            padding: 0;
        }
        .ph-0{
            padding-left: 0;
            padding-right: 0;
        }
        .w-1p{
            width: 1%;
        }
        .w-10p{
            width: 10%;
        }
        .w-20{
            width: 20px;
        }
        .ta-right{
            text-align: right;
        }
        .p-5{
            padding: 5px;
        }
    </style>
    </head>
    <body>
    <div class='container'>
        <table>
            <thead>
                    <tr>
                        <th colspan='2' class='t-left pl-0'>Команда</th>
                        <th class='w-1p'>И</th>
                        <th class='w-1p'>В</th>
                        <th class='w-1p'>Н</th>
                        <th class='w-1p'>П</th>
                        <th class='w-10p'>+/-</th>
                        <th class='w-1p ta-right'>О</th>
                    </tr>
            </thead>
            <tbody>
                    <tr>
                        <td colspan='8' class='p-5'></td>
                    </tr>
            $msg
        </tbody>
        </table>
    </div>